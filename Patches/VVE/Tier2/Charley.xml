<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Fuel Consumption -->
  
	<Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Charley"]
      /comps/li[@Class="Vehicles.CompProperties_FueledTravel"]
      /fuelConsumptionRate
    </xpath>
		<value>
			<fuelConsumptionRate>10</fuelConsumptionRate>
		</value>
	</Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Charley"]
      /comps/li[@Class="Vehicles.CompProperties_FueledTravel"]
      /fuelConsumptionWorldMultiplier
    </xpath>
		<value>
			<fuelConsumptionWorldMultiplier>1</fuelConsumptionWorldMultiplier>
		</value>
	</Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Charley"]
      /comps/li[@Class="Vehicles.CompProperties_FueledTravel"]
      /fuelCapacity
    </xpath>
		<value>
			<fuelCapacity>40</fuelCapacity>
		</value>
	</Operation>

  <!-- Speed -->

	<Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Charley"]/vehicleStats/MoveSpeed
    </xpath>
		<value>
			<MoveSpeed>21</MoveSpeed>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Charley"]/properties/worldSpeedMultiplier
    </xpath>
		<value>
			<worldSpeedMultiplier>1.5</worldSpeedMultiplier>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Charley"]/properties/offRoadMultiplier
    </xpath>
		<value>
			<offRoadMultiplier>1.3</offRoadMultiplier>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Charley"]/properties
    </xpath>
		<value>
			<winterSpeedMultiplier>2.6</winterSpeedMultiplier>
		</value>
	</Operation>

  <!-- Cargo Capacity -->

	<Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Charley"]/vehicleStats/CargoCapacity
    </xpath>
		<value>
			<CargoCapacity>20</CargoCapacity>
		</value>
	</Operation>

</Patch>
