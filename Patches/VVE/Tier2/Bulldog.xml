<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Fuel Consumption -->
  
	<Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Bulldog"]
      /comps/li[@Class="Vehicles.CompProperties_FueledTravel"]
      /fuelConsumptionRate
    </xpath>
		<value>
			<fuelConsumptionRate>43</fuelConsumptionRate>
		</value>
	</Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Bulldog"]
      /comps/li[@Class="Vehicles.CompProperties_FueledTravel"]
      /fuelCapacity
    </xpath>
		<value>
			<fuelCapacity>165</fuelCapacity>
		</value>
	</Operation>

  <!-- Speed -->

	<Operation Class="PatchOperationAdd">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Bulldog"]/properties
    </xpath>
		<value>
			<offRoadMultiplier>1.4</offRoadMultiplier>
			<winterSpeedMultiplier>1.8</winterSpeedMultiplier>
			<worldSpeedMultiplier>1.5</worldSpeedMultiplier>
		</value>
	</Operation>

  <!-- Cargo Capacity -->

	<Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Bulldog"]/vehicleStats/CargoCapacity
    </xpath>
		<value>
			<CargoCapacity>215</CargoCapacity>
		</value>
	</Operation>

</Patch>
