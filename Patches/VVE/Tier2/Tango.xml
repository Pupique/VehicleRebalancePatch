<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Fuel Consumption -->
  
	<Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Tango"]
      /comps/li[@Class="Vehicles.CompProperties_FueledTravel"]
      /fuelConsumptionRate
    </xpath>
		<value>
			<fuelConsumptionRate>41</fuelConsumptionRate>
		</value>
	</Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Tango"]
      /comps/li[@Class="Vehicles.CompProperties_FueledTravel"]
      /fuelCapacity
    </xpath>
		<value>
			<fuelCapacity>150</fuelCapacity>
		</value>
	</Operation>

  <!-- Speed -->

	<Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Tango"]/vehicleStats/MoveSpeed
    </xpath>
		<value>
			<MoveSpeed>8.2</MoveSpeed>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Tango"]/properties
    </xpath>
		<value>
			<offRoadMultiplier>1.3</offRoadMultiplier>
			<winterSpeedMultiplier>1.5</winterSpeedMultiplier>
			<worldSpeedMultiplier>1.5</worldSpeedMultiplier>
		</value>
	</Operation>

  <!-- Cargo Capacity -->

	<Operation Class="PatchOperationReplace">
    <xpath>
      /Defs/Vehicles.VehicleDef[defName="VVE_Tango"]/vehicleStats/CargoCapacity
    </xpath>
		<value>
			<CargoCapacity>150</CargoCapacity>
		</value>
	</Operation>

</Patch>
